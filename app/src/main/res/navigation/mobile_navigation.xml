<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.ecommerce2.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_buying"
        android:name="com.example.ecommerce2.ui.buying.BuyingFragment"
        android:label="@string/title_buying"
        tools:layout="@layout/fragment_buying" />

    <fragment
        android:id="@+id/navigation_selling"
        android:name="com.example.ecommerce2.ui.selling.SellingFragment"
        android:label="@string/title_selling"
        tools:layout="@layout/fragment_selling" />

    <fragment
        android:id="@+id/navigation_signout"
        android:name="com.example.ecommerce2.ui.signout.SignoutFragment"
        android:label="Signout"
        tools:layout="@layout/fragment_signout" />
</navigation>